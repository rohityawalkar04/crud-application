<div class="row">
    <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
            <p class="text-danger"><%= error %></p>
        <% end %>
    <% end %>
</div>

<div class="row">
    <div id="registration" class="col-md-6">
        <h1>Register</h1>
        <%= form_for @user do |f| %>
            <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name %>
            </div>

            <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email %>
            </div>

            <div class="form-group">
                <%= f.label :password %>
                <%= f.password_field :password %>
            </div>

            <div class="form-group">
                <%= f.label :password_onfirmation %>
                <%= f.password_field :password_onfirmation %>
            </div>

            <%= f.submit %>
        <% end %>
    </div>

    <div id="login" class="col-md-6">
        <h1>Login</h1>
        <%= form_tag sessions_path do %>
            <div class="form-group">
                <%= label_tag :email %>
                <%= email_field_tag :email %>
            </div>

            <div class="form-group">
                <%= label_tag :password %>
                <%= password_field_tag :password %>
            </div>
            <%= submit_tag "Sign In" %>
        <% end %>
    </div>
</div>